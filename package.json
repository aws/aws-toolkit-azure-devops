{
    "name": "aws-vsts-tools",
    "version": "1.0.22",
    "description": "aws tools for visual studio team services",
    "private": true,
    "main": "_build/tasks",
    "scripts": {
        "build": "npm run generateCode && npm run compileTypescript",
        "generateCode": "ts-node ./build-scripts/generateRunners.ts",
        "compileTypescript": "tsc -p ./",
        "test": "jest",
        "clean": "ts-node ./build-scripts/clean.ts",
        "lint": "tslint --project .",
        "generateResources": "node ./build-scripts/generateResources.js",
        "copyResources": "node ./build-scripts/copyResources.js",
        "package": "node ./build-scripts/packageExtension.js",
        "fullBuild": "npm run build && npm run lint && npm run copyResources && npm run generateResources && npm run test && npm run package"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/aws/aws-vsts-tools"
    },
    "keywords": [
        "aws",
        "s3",
        "cloudformation",
        "cli",
        "lambda",
        "codedeploy",
        "ec2"
    ],
    "author": "amazon web services llc",
    "license": "apache",
    "bugs": "https://github.com/aws/aws-vsts-tools/issues",
    "homepage": "https://github.com/aws/aws-vsts-tools",
    "devDependencies": {
        "@types/archiver": "^3.0.0",
        "@types/fs-extra": "^7.0.0",
        "@types/jest": "^24.0.12",
        "@types/js-yaml": "^3.12.1",
        "@types/node": "^12.0.0",
        "@types/q": "^1.5.2",
        "archiver": "^3.0.0",
        "clean-webpack-plugin": "^2.0.1",
        "fs-extra": "^7.0.1",
        "husky": "^2.3.0",
        "jest": "^24.7.1",
        "json-query": "^2.2.2",
        "prettier": "1.17.1",
        "pretty-quick": "^1.10.0",
        "sync-request": "^6.1.0",
        "terser-webpack-plugin": "^1.2.3",
        "tfx-cli": "^0.7.5",
        "ts-jest": "^24.0.2",
        "ts-loader": "^6.0.0",
        "ts-node": "^8.1.0",
        "tslint": "^5.16.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-no-circular-imports": "^0.6.1",
        "typescript": "^3.4.5",
        "validator": "^10.11.0",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.2",
        "webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
        "aws-sdk": "2.452.0",
        "base-64": "0.1.0",
        "https-proxy-agent": "2.2.1",
        "js-yaml": "^3.13.1",
        "npm": "^6.2.0",
        "q": "^1.5.1",
        "shelljs": "0.7.8",
        "vsts-task-lib": "2.7.0"
    },
    "jest": {
        "coverageDirectory": "./coverage/",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "Tasks/**",
            "!Tasks/**/*.runner.ts"
        ],
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "moduleNameMapper": {
            "^sdkutils/(.*)": "<rootDir>/Tasks/Common/sdkutils/$1.ts",
            "^Common/(.*)": "<rootDir>/Tasks/Common/$1.ts",
            "^aws-sdk/(.*)": "<rootDir>/node_modules/aws-sdk/$1.js"
        },
        "transform": {
            "\\.ts$": "ts-jest"
        },
        "testRegex": "/tests/.*\\.ts$"
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "none",
        "tabWidth": 4,
        "singleQuote": true,
        "semi": false,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "endOfLine": "lf"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
