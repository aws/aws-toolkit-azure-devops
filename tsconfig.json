{
    "compilerOptions": {
		"baseUrl": ".",
        "target": "ES6",
		"outDir": "_build",
        "module": "commonjs",
        "sourceMap": true,
        "incremental": true,
        //"strict": true,
        "paths": {
            "aws-sdk*": [ "node_modules/aws-sdk/*" ],
            "Common*": [ "Tasks/Common*" ],
            "sdkutils*": [ "Tasks/Common/sdkutils*" ],
            "beanstalkutils*": [ "Tasks/Common/beanstalkutils*" ],
            "cloudformationutils*": [ "Tasks/Common/cloudformationutils*" ]
        },
        "rootDirs" : [
            "Tasks"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
