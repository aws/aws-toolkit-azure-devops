{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES6",
        "outDir": "build",
        "module": "commonjs",
        "sourceMap": true,
        "incremental": true,
        "strict": true,
        "esModuleInterop": true,
        "useUnknownInCatchVariables": false,
        "paths": {
            "aws-sdk*": ["node_modules/aws-sdk/*"],
            "lib/*": ["src/lib/*"],
            "tasks/*": ["src/tasks/*"]
        },
        "rootDirs": ["src"]
    },
    "exclude": ["node_modules", "build", "package"]
}
